<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/contentsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/datetimeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/planDateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plan_Date" />

            <Button
                android:id="@+id/planTimeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Plan_Time" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/planLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/planTitleEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Plan" />

            <EditText
                android:id="@+id/planBodyEdit"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:text="Detail_plan" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <Button
                android:id="@+id/planSaveBtn"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:text="save"
                android:textColor="#ff420000"
                android:textSize="18dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:text="delete"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#ff420000"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/planCancelBtn"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:text="close"
                android:textColor="#ff420000"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
